<script>
    $(document).ready(function(){
        var lastIndex= $('thead tr th').last().index();
        var nextToLastIndex= lastIndex - 1;

        //Obtenemos los ultimos dos index de nuestra tabla para quitarle el sorter
        var myHeaders = {};
        myHeaders[2] = {sorter: false };
        myHeaders[lastIndex] = {sorter: false };
        myHeaders[nextToLastIndex] = {sorter: false };

        $("#tabla-productos").tablesorter({headers:myHeaders});
        $('select').material_select();
        $('.tooltipped').tooltip({delay: 50});
        $("#tabla-productos").filterTable({inputSelector: '#search-container input',minRows:2});
        $('.modal-trigger').leanModal();
        
        
        //Variables globales de la tabla
        var columnCount = $('th').length;
       
        //Modal caducidades
        $('td i.mdi-action-assignment').on('click',function(){
            
            var idarticulovariante = $(this).closest('tr').attr('id');
            var index = $(this).closest('td').index() + 1;  
            var descripcion = $(this).closest('td').siblings('#descripcion').text();
            var idlugar = $('th:nth-child('+index+')').attr('id');
            var modalName = '#modal-producto-'+idarticulovariante+'-lugar-'+idlugar;
            var existencias = $(this).closest('td').text();
            var lugarNombre = $('th:nth-child('+index+')').text();

            $.get(window.location.pathname+'/caducidadbylugar',
                {idarticulovariante:idarticulovariante,idlugar:idlugar,descripcion:descripcion,existencias:existencias,lugarNombre:lugarNombre},
                function(modal){
                    $('table').after(modal);
                    $(modalName).openModal();
                }
            );  

        }); 
        
        
        $('a.add_existencias').on('click',function(){
            var idarticulovariante = $(this).closest('tr').attr('id');
            var modalName = '#add-modal-articulo-'+idarticulovariante;
            $.ajax({
                url:window.location.pathname+'/addexistencias',
                method:'GET',
                data:{idarticulovariante:idarticulovariante},
                success:function(modal){
                    var modal = $('<div>'+modal+'</div>');
                    $('table').after(modal);
                    $(modalName).openModal();
                }
            });
        });
        
        
        
        var filterByAlmacen = function(){
            $('th.almacen').show();
            $('tbody td').show();
            
            var selected =  $("#almacen_filter").multipleSelect('getSelects');
            var count = selected.length
            $('th.almacen:visible').filter(function(index,element){
                if($.inArray($(this).attr('id'),selected) == -1){
                    //Obtenemos el index de la columna
                    var col_index = $(this).index();
                    //Escondemos el th;
                    $(this).hide();
                    //Escondemos todas los td correpsondientes a dicha columna
                    $('tbody').children('tr').filter(function(){ 
                        $(this).find('td').eq(col_index).hide();
                    }); 
                    
                }
            });
            if(count == 1){
                $('tbody').children('tr.sinregistros').show();
            }else{
                $('tbody').children('tr.sinregistros').hide();
            }
            
        }
        //Inicializamos el filtro por almacenes
        $.ajax({
            url:'/getalmacenes',
            dataType: 'JSON',
            async: false,
            success: function(data){
                $.each(data,function(index,element){
                    $('#almacen_filter').append('<option value="'+element.value+'">'+element.label+'</option>')
                });
                $("#almacen_filter").multipleSelect({
                    selectAll:true,
                    allSelected:'Todos los almacenes',
                    selectAllText:'Todos los almacenes',
                    onClick : filterByAlmacen,
                    onCheckAll:filterByAlmacen,
                    onUncheckAll:filterByAlmacen

                });  
                 $("#almacen_filter").multipleSelect("checkAll");
            }
        });
        
       
            
        
        

        
    });
        
</script>   